---
const { lang, metaDescription, name } = Astro.props;

const currentLang = lang || "es";
const GA_ID = import.meta.env.PUBLIC_GA_ID;
const siteUrl = "https://damianbarzola.vercel.app";
const pageTitle = `${name} | Portfolio`;
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <!-- Google tag (gtag.js) -->
   {GA_ID&& <script async src=`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`
    ></script>}
    { GA_ID && <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", GA_ID);
    </script>}

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="alternate" hreflang="en" href={`${siteUrl}/en`} />
    <link rel="alternate" hreflang="es" href={`${siteUrl}/es`} />
    <title>{pageTitle}</title>
    <meta name="description" content={metaDescription} />    
    <meta name="keywords" content="portfolio, Damian Barzola, software development, data analysis, UI/UX design, frontend development" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Damian Barzola">

    <!-- Open Graph -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:image" content={`${siteUrl}/favicon.svg`} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={`${siteUrl}/favicon.svg`} />
    
    </head
  >

  <body>
    <slot />
  </body>
</html>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const body = document.body;
    document.addEventListener("mousemove", (event) => {
          body.style.background = `radial-gradient(600px at ${event.clientX}px ${event.clientY}px,  rgb(43 71 151 / 18%), transparent 80%)`;
        });

  });
</script>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap");
  :root {
    --black: #000000;
    --blue: #14213d;
    --gold: #ffb300;
    --platinum: #e5e5e5;
    --white: #ffffff;

    --text-primary: var(--white);
    --text-secondary: var(--platinum);
    --text-tertiary: #b1b1b1;
    --text-active: var(--black);

    --card: rgb(28 28 28 / 40%);
    --chips: #1818189e;

    --bg-gradient: linear-gradient(
      180deg,
      rgb(2 7 26) 0%,
      rgb(1 6 19) 35%,
      #01010f 100%
    );

    --line: rgb(24, 24, 24);
  }
  [data-theme="light"] {
    --text-primary: var(--black);
    --text-secondary: #202020;
    --text-tertiary: #464646;
    --text-active: var(--white);

    --card: rgb(255 255 255 / 40%);
    --chips: #ffffff73;
    --bg-gradient: linear-gradient(to top, #e6f3ff 0%, #ace0f9a3 100%);

    --line: rgb(190, 190, 190);
  }
  html {
    min-height: 100dvh;
    background: var(--bg-gradient);
    position: relative;
  }

  body {
    box-sizing: border-box;
    margin: 0;
    width: 100%;
    font-family: "Poppins", "Inter", "Roboto", Arial, sans-serif;
    font-weight: 500;
    letter-spacing: 0.5px;
    color: var(--text-primary);
    height: 100dvh;
    padding: 4rem 3rem 3rem 3rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  body::after,
  body::before,
  main::after,
  main::before {
    content: "";
    display: block;
    background: var(--text-tertiary);
    position: absolute;
    z-index: -1;
    opacity: 0.1;
  }
  body::after,
  body::before {
    width: 2px;
    height: 100%;
  }
  main::after,
  main::before {
    height: 2px;
    width: 100%;
  }

  main::after {
    top: 1.5rem;
    left: 0;
  }

  main::before {
    bottom: 1.5rem;
    left: 0;
  }
  body::before {
    top: 0;
    right: 1.5rem;
  }
  body::after {
    top: 0;
    left: 1.5rem;
  }
  @media screen and (max-width: 768px) {
    body::after {
      left: 0.4rem;
    }
    body::before {
      right: 0.4rem;
    }
    main::after {
      top: 0.4rem;
    }
    main::before {
      bottom: 0.4rem;
    }
  }

  section[id] {
    min-height: 73dvh;
    margin-top: 5dvh;
    padding-bottom: 5dvh;
    border-bottom: 1px solid var(--line);
  }
  section[id]:first-of-type {
    margin-top: 0;
    padding-top: 0;
  }
  section[id]:last-of-type {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }

  .section-title {
    display: none;
  }
  /* Chrome, Edge and Safari */
  *::-webkit-scrollbar {
    height: 10px;
    width: 10px;
  }
  *::-webkit-scrollbar-track {
    border-radius: 5px;
    background-color: transparent;
  }

  *::-webkit-scrollbar-track:hover {
    background-color: transparent;
  }

  *::-webkit-scrollbar-track:active {
    background-color: transparent;
  }

  *::-webkit-scrollbar-thumb {
    border-radius: 5px;
    background-color: #bcbcbc;
  }

  *::-webkit-scrollbar-thumb:hover {
    background-color: #d6d6d6;
  }

  *::-webkit-scrollbar-thumb:active {
    background-color: #ffffff;
  }

  /* selection color */
  ::selection {
    background: var(--blue);
    color: var(--white);
  }
  .fade-in {
    opacity: 0;
    transform: translateY(10px);
    animation: fadeIn 0.5s ease forwards;
    animation-delay: 0.3s;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  } */
  @media screen and (max-width: 768px) {
    body {
      height: auto;
      padding: 4px;
    }
    main {
      display: block;
    }
    section[id] {
      min-height: 60dvh;
      margin-top: 8dvh;
      padding-bottom: 8dvh;
      border-bottom: none;
    }
    .section-title {
      display: block;
      color: var(--text-primary);
      font-weight: 700;
      font-size: 1.7rem;
      padding-bottom: 5px;
      margin-bottom: 20px;
      border-bottom: var(--text-secondary) solid 2px;
    }
  }
</style>
