import tailwind from "../assets/dev/tailwind.svg";

const { data } = Astro.props;
const chipData = {
  [CHIPS_TAGS.JAVASCRIPT]: {
    image: js.src,
    name: "JavaScript",
  },
  [CHIPS_TAGS.REACT]: {
    image: react.src,
    name: "React.js",
  },
  [CHIPS_TAGS.HTML]: {
    image: html.src,
    name: "HTML",
  },
  [CHIPS_TAGS.CSS]: {
    image: css.src,
    name: "CSS",
  },
  [CHIPS_TAGS.BOOTSTRAP]: {
    image: bootstrap.src,
    name: "Bootstrap",
  },
  [CHIPS_TAGS.VITEST]: {
    image: vitest.src,
    name: "Vitest",
  },
  [CHIPS_TAGS.CYPRESS]: {
    image: cypress.src,
    name: "Cypress",
  },
  [CHIPS_TAGS.PYTHON]: {
    image: python.src,
    name: "Python",
  },
  [CHIPS_TAGS.FLASK]: {
    image: flask.src,
    name: "Flask",
  },
  [CHIPS_TAGS.POSTGRE]: {
    image: postgre.src,
    name: "PostgreSQL",
  },
  [CHIPS_TAGS.NODE]: {
    image: node.src,
    name: "Node.js",
  },
  [CHIPS_TAGS.ASTRO]: {
    image: astro.src,
    name: "Astro",
  },
  [CHIPS_TAGS.C]: {
    image: c.src,
    name: "C",
  },
