  [CHIPS_TAGS.TAILWIND]: {
    image: tailwind.src,
    name: "Tailwind CSS",
  },
};
---

<div class="chips">
  {
    data.map((chip) => (
      <div class="chip">
        <img src={chipData[chip]?.image} alt={chipData[chip]?.name} />
        <span>{chipData[chip]?.name}</span>
      </div>
    ))
  }
</div>
<style>
  .chips {
    display: flex;
    gap: 0.4rem 1rem;
    flex-wrap: wrap;
    width: 100%;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }
  .chip {
    display: flex;
    gap: 0.4rem;
    align-items: center;
    background-color: rgba(240, 240, 240, 0.1);
    padding: 0.25rem 0.5rem;
    border-radius: 0.4rem;
    border: 1px solid black;
    color: var(--text-tertiary);
  }
  img {
    width: 15px;
    height: 15px;
  }
</style>
