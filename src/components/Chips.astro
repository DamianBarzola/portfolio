---

<div class="chips">
  {
    data?.map((chip) => (
      <div class="chip">
        <Image src={chipData[chip]?.image} alt={chipData[chip]?.name} />
        <span>{chipData[chip]?.name}</span>
      </div>
    ))
  }
</div>
<style>
  .chips {
    display: flex;
    gap: 0.3rem 0.5rem;
    flex-wrap: wrap;
    width: 100%;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }
  .chip {
    display: flex;
    gap: 0.4rem;
    align-items: center;
    background-color: var(--chips);
    padding: 0.25rem 0.5rem;
    border-radius: 0.4rem;
    border: 1px solid var(--line);
    color: var(--text-tertiary);
  }
  img {
    width: 15px;
    height: 15px;
  }
</style>
