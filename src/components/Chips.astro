  },
  [CHIPS_TAGS.VITEST]: {
    image: vitest,
    name: "Vitest",
  },
  [CHIPS_TAGS.CYPRESS]: {
    image: cypress,
    name: "Cypress",
  },
  [CHIPS_TAGS.PYTHON]: {
    image: python,
    name: "Python",
  },
  [CHIPS_TAGS.FLASK]: {
    image: flask,
    name: "Flask",
  },
  [CHIPS_TAGS.POSTGRE]: {
