---
const { data } = Astro.props;
---

<div class="chips">
  {
    data.map((chip: { image: string; name: string }) => (
      <div class="chip">
        <img src={chip.image} alt={chip.name} />
        <span>{chip.name}</span>
      </div>
    ))
  }
</div>
<style>
  .chips {
    display: flex;
    gap: 0.4rem 1rem;
    flex-wrap: wrap;
    width: 100%;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }
  .chip {
    display: flex;
    gap: 0.4rem;
    align-items: center;
    background-color: rgba(240, 240, 240, 0.1);
    padding: 0.4rem 0.5rem;
    border-radius: 0.4rem;
    border: 1px solid black;
    color: var(--text-tertiary);
  }
  img {
    width: 15px;
    height: 15px;
  }
</style>
