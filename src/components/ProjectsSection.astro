---
const { translations } = Astro.props;
---

<section id="projects">
  <span class="section-title">{translations?.menu.projects}</span>
  <div class="container">
    <div class="card">
      <div class="image">
        <img src="" alt="" />
      </div>
      <div class="info">
        <h4>Titulo</h4>
        <p>
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Minus quidem
          vel tenetur architecto, assumenda molestias mollitia provident. Ipsum
          autem, magni accusantium minima deleniti nulla repellat voluptatem
          voluptate ducimus error repudiandae!
        </p>
      </div>
    </div>
  </div>
</section>
<style>
  .projects {
    display: flex;
    width: 100%;
  }
  .container {
    display: flex;
    width: 100%;
    gap: 2rem;
  }

  .card {
    padding: 1rem;
    width: 100%;
    background-color: var(--card);
    border-radius: 0.4rem;
    border: var(--line) 1px solid;
    display: flex;
    gap: 0.4rem;
  }
  .image {
    height: 100%;
    width: 25%;
  }
  .info {
    width: 100%;
  }
  h4 {
    margin: 0;
    margin-bottom: 0.5rem;
  }
  p {
    margin: 0;
    padding: 0.5rem 0;
  }
  @media screen and (max-width: 768px) {
    .card {
      flex-direction: column;
    }
    .image {
      width: 100%;
      height: 8rem;
    }
  }
</style>
