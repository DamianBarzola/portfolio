---
import Chips from "./Chips.astro";
import github from "../assets/github-white.svg";
import web from "../assets/web.svg";

const { translations } = Astro.props;
---

<section id="projects">
  <span class="section-title">{translations?.menu.projects}</span>
  <div class="container">
    {
      translations.projects &&
        translations.projects.map((project) => (
          <div class="card">
            <div class="image">
              <img src="" alt="" />
            </div>
            <div class="info">
              <h4>{project.name}</h4>
              <p>{project.description}</p>
              {project.technologies && <Chips data={project.technologies} />}
              <div class="buttons">
                {project.web && (
                  <a
                    class="button"
                    href={project.web}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <img
                      src={web.src}
                      alt="web icon"
                      style={{ height: "2rem" }}
                    />
                  </a>
                )}
                {project.repo && (
                  <a
                    class="button"
                    href={project.repo}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <img
                      src={github.src}
                      alt="github icon"
                      style={{ height: "1.7rem" }}
                    />
                  </a>
                )}
              </div>
            </div>
          </div>
        ))
    }
  </div>
</section>
<style>
  .projects {
    display: flex;
    width: 100%;
  }
  .container {
    display: flex;
    width: 100%;
    gap: 2rem;
  }

  .card {
    padding: 1rem;
    width: 100%;
    background-color: var(--card);
    border-radius: 0.4rem;
    border: var(--line) 1px solid;
    display: flex;
    gap: 0.4rem;
  }
  .image {
    height: 100%;
    width: 30%;
  }
  .info {
    width: 100%;
  }
  .buttons {
    margin-top: 1rem;
    margin-bottom: 0.5rem;
    display: flex;
    width: 100%;
    gap: 1rem;
  }
  .button {
    padding: 0.5rem;
    border: 1px solid var(--text-tertiary);
    border-radius: 50%;
    height: 2rem;
    width: 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0.8;
    transition: all ease-in-out 0.3s;
  }
  .button:hover {
    opacity: 1;
    background-color: var(--line);
  }
  .button img {
    fill: white;
  }
  h4 {
    margin: 0;
    margin-bottom: 0.5rem;
  }
  p {
    margin: 0;
    padding: 0.5rem 0 0 0;
  }
  @media screen and (max-width: 768px) {
    .card {
      flex-direction: column;
    }
    .image {
      width: 100%;
      height: 8rem;
    }
  }
</style>
